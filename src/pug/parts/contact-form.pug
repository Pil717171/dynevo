section.contact-form 
    .container
        .row
            .col-12.col-lg-7
                h2.text 
                    span Tell us about your project
                        span.gradient-text .
            .col-12.col-lg-5.offset-lg-1
                p.text
                    span Just fill in the form below, and we will contact you within 24 hours
                form(name="contact-form")
                    .contact-form-block
                        .contact-form-input
                            .contact-form-input-label.text
                                span Full Name *
                                span.error-field
                            .contact-form-input-field
                                input(type="text" name="name")
                        .contact-form-items
                            .contact-form-input
                                .contact-form-input-label.text
                                    span E-mail *
                                    span.error-field
                                .contact-form-input-field
                                    input(type="email" name="email")
                            .contact-form-input
                                .contact-form-input-label.text
                                    span Phone number
                                    span.error-field
                                .contact-form-input-field
                                    input(type="number" name="phone")
                        .contact-form-input
                            .contact-form-input-label.text
                                span Short info about project
                                span.error-field
                            .contact-form-input-field
                                input(name="message")
                        .start-button
                            button(type="submit" disabled="true") 
                                span Get in touch
            .d-none.d-lg-block.col-lg-6
                .contact-form-img
                    img.image(src="./images/choose_1.jpg")
